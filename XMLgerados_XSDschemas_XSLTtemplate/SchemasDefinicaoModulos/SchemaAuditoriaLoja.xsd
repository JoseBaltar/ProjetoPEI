<?xml version="1.0"?>
<!-- 
Definição dos tipos relativos à Autoria de uma Loja.
-->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
               targetNamespace="ProjetoPEI/Grupo4/Entrega2/Auditoria"
               xmlns="ProjetoPEI/Grupo4/Entrega2/Auditoria"
              
               xmlns:loj="ProjetoPEI/Grupo4/EntregaFinal/Loja"
               xmlns:vnd="ProjetoPEI/Grupo4/Entrega2/Venda"
               elementFormDefault="qualified">
		   
    <xs:import schemaLocation="SchemaLoja.xsd"
                   namespace="ProjetoPEI/Grupo4/EntregaFinal/Loja"/>
    <xs:import schemaLocation="SchemaVenda.xsd"
                   namespace="ProjetoPEI/Grupo4/Entrega2/Venda"/>
    
    <xs:complexType name="typeAuditoria">
        <xs:sequence>
            
            <xs:element name="Loja" type="loj:typeLoja"/>
				
            <xs:element name="Venda">
                <xs:complexType>
                    <xs:sequence minOccurs="0">
                        <xs:element name="Moeda" type="vnd:typeMoeda"/>
                        <xs:element name="DadosVenda" type="vnd:typeVenda"/>
                    </xs:sequence>
                    <xs:attribute name="dataInicio" type="xs:dateTime" use="required"/>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
        <!-- 'use="required"' retirado devido a nao ser possivel especificar a data através do XSLT... -->
        <xs:attribute name="dataCriacao" type="xs:dateTime"/>
    </xs:complexType>

    <xs:element name="Auditoria" type="typeAuditoria"/>

</xs:schema>
    
