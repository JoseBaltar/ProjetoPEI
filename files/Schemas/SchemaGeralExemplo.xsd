<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="ProjetoPEI/Grupo/Entrega1/"
           xmlns="ProjetoPEI/Grupo/Entrega1/"
              
           xmlns:loj="ProjetoPEI/Grupo/Entrega1/Loja"
           xmlns:vnd="ProjetoPEI/Grupo/Entrega1/Venda"
           xmlns:cmn="ProjetoPEI/Grupe/Entrega1/CommonSchema"
           elementFormDefault="qualified">
		   
    <xs:import schemaLocation="Loja.xsd"
               namespace="ProjetoPEI/Grupo/Entrega1/Loja"/>
    <xs:import schemaLocation="Venda.xsd"
               namespace="ProjetoPEI/Grupo/Entrega1/Venda"/>
    
    <xs:element name="Documento">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Loja" type="loj:typeLoja"/>
                <xs:element name="Vendas">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="Moeda" type="typeMoeda"/>
                            <xs:element name="Venda" type="prd:typeVenda" 
                                        minOccurs="0" maxOccurs="unbounded"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
		
        <xs:attribute name="dataCriação" type="xs:date"/>
    </xs:element>
    
    <xs:complexType name="typeMoeda">
        <xs:complexContent>
            <xs:extension base="cmn:baseMoeda">
                <xs:attribute name="currencyRateID" type="xs:unsignedInt"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
</xs:schema>