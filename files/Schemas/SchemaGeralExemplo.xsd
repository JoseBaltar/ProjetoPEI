<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="ProjetoPEI/Grupo<>/Entrega1/"
           xmlns="ProjetoPEI/Grupo<>/Entrega1/"
		   
           xmlns:loj="ProjetoPEI/Grupo<>/Entrega1/Loja"
		   xmlns:prd="ProjetoPEI/Grupo<>/Entrega1/Produto"
		   xmlns:vnd="ProjetoPEI/Grupo<>/Entrega1/Vendas"
           elementFormDefault="qualified">
		   
    <xs:import schemaLocation="Loja.xsd" 
               namespace="ProjetoPEI/Grupo<>/Entrega1/Loja"/>
	<xs:import schemaLocation="Produto.xsd" 
               namespace="ProjetoPEI/Grupo<>/Entrega1/Produto"/>
	<xs:import schemaLocation="Vendas.xsd" 
               namespace="ProjetoPEI/Grupo<>/Entrega1/Vendas"/>
    
    <xs:element name="Documento">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="Loja" type="loj:typeLoja"/>
				<xs:element name="ProdutosAssociados"/>
					<xs:complexType>
						<xs:sequence minOccurs="1" maxOccurs="unbounded">
							<xs:element name="Produto" type="prd:typeProduto"/>
						</xs:sequence>
					</xs:complexType>
				<xs:element name="Vendas" type="vnd:typeVendas/>
			</xs:sequence>
			
			<xs:attribute name="dataCriação" type="xs:date"/>
		</xs:complexType>
    </xs:element>
    
</xs:schema>