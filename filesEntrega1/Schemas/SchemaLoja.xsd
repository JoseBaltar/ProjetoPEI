<?xml version="1.0" encoding="UTF-8"?>

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="ProjetoPEI/Grupo4/Entrega1/Loja"
           xmlns="ProjetoPEI/Grupo4/Entrega1/Loja"
           
           xmlns:cmn="ProjetoPEI/Grupo4/Entrega1/CommonSchema"
           elementFormDefault="qualified">
    
    <xs:import schemaLocation="CommonSchema.xsd" 
               namespace="ProjetoPEI/Grupo4/Entrega1/CommonSchema"/>
    
    <!-- Assim, com o choice e os min e max Occurs faz com que seja necessário
    pelo menos um contacto mas também permite que existem mais contactos
    -->
    <xs:complexType name="typeContactos">
        <xs:choice minOccurs="1" maxOccurs="unbounded">
            <xs:element name="Email" type="cmn:typeEmail"/>
            <xs:element name="Telefone" type="cmn:typeTelefone"/>	
        </xs:choice>
    </xs:complexType>
    
    <xs:complexType name="typeLoja">
        <xs:sequence>
            <xs:element name="Nome" type="xs:string"/>
            <xs:element name="Morada" type="xs:string"/>
            <xs:element name="Contactos" type="typeContactos"/>
            <xs:element name="NIF" type="cmn:NIF"/>
        </xs:sequence>
    </xs:complexType>	
			   
</xs:schema>